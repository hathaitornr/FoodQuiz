<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenColorPrimaryDark</item>
        <item name="colorAccent">@color/greenColorAccent</item>
        <item name="android:textColorPrimary">@color/greenColorText</item>
        <item name="android:windowBackground">@color/greenColorBackground</item>
    </style>
    
    <style name="TextViewQuestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/question_spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewQuestionNoTopMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButtonTrue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/spacing_micro</item>
        <item name="android:layout_marginLeft">@dimen/spacing_big</item>
        <item name="android:layout_marginRight">@dimen/spacing_micro</item>
        <item name="android:layout_marginStart">@dimen/spacing_big</item>
        <item name="android:drawableLeft">@drawable/true_icon</item>
        <item name="android:drawableStart">@drawable/true_icon</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RadioButtonFalse">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_micro</item>
        <item name="android:layout_marginStart">@dimen/spacing_micro</item>
        <item name="android:drawableLeft">@drawable/false_icon</item>
        <item name="android:drawableStart">@drawable/false_icon</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="RadioButtonLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="RadioButtonVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="RadioButtonNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_double</item>
        <item name="android:layout_marginLeft">@dimen/spacing_double</item>
        <item name="android:layout_marginRight">@dimen/spacing_double</item>
        <item name="android:layout_marginStart">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CorrectAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingRight">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:paddingTop">@dimen/spacing_micro</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Explanation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingLeft">@dimen/spacing_double</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingRight">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
        <item name="android:textColor">@color/greenColorText</item>
        <item name="android:paddingTop">@dimen/spacing_micro</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginBottom">@dimen/question_spacing</item>
    </style>

    <style name="Congrats">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_big</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="YourScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:titleMarginTop">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/greenColorScore</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
